<Window x:Class="NorthwindCRUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NorthwindCRUD"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Usuario:" Margin="10,159,10,0" VerticalAlignment="Top" Grid.Row="3"/>
        <TextBox Name="txtUsuario" Margin="10,87,10,-47" Grid.Row="3" Height="25"/>

        <TextBlock Text="Contraseña:" Margin="10,234,10,0" VerticalAlignment="Top" Grid.Row="3"/>
        <PasswordBox Name="txtPassword" Margin="10,255,10,-30" Grid.Row="3" Height="25"/>

        <TextBlock Name="txtError" TextAlignment="Center" Text="Usuario o contraseña incorrectos" Margin="252,284,252,-51" Grid.Row="3" Foreground="Red" Visibility="Hidden"/>

        <Button Content="Iniciar sesión" Margin="0,306,0,-86" Grid.Row="3" Height="30" Width="150" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
